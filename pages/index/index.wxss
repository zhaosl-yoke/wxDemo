page{
  font-size: 40rpx;
}
swiper{
width:750rpx;
height:360rpx;
}
swiper-item image{
  width:750rpx;
}
.sort{
  background: #fff;
  margin: 20rpx 0;
  padding: 10rpx 0;
}
.sort navigator{
   display: inline-block;
   width: 25%;
   text-align: center;
}
/*.sort .icon{
  display: inline-block;
  width: 25%;
  text-align: center;
}*/
.sort view image{
  width: 50rpx;
  height: 50rpx;
}
.flex-wrp{
  background: #fff;
}
.list_title {
  margin-top: 20rpx;
}
.list_title text{
  border-left: solid 8rpx #f44933;
  padding-left: 20rpx;
}
.list {
  position: relative;
  margin: 19rpx;
  width: 338rpx;
  display: inline-block;
  margin-bottom:0;
  box-sizing: border-box;
}
.list .content {
  width:100%;
  height: 338rpx;
}
.list .name{
  vertical-align: super;
}
.flag{
  width:60rpx;
  height:60rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.pause{
  display: block;
  position: absolute;
  top: 50%;
  margin-top: -20rpx;
  left: 50%;
  margin-left: -35rpx;
  width: 70rpx;
  height: 70rpx;
  box-sizing: border-box;
}
.bot{
position: absolute;
bottom: 30rpx;
left: 40rpx;
line-height: 40rpx;
vertical-align: middle

}
.img{
  width:40rpx;
  height:40rpx;
  vertical-align: middle;
}
.num{
  color: #fff;
  margin-left: 20rpx;
  vertical-align: middle;
}
.comment{
  margin-left: 80rpx;
  height: 45rpx;
}
