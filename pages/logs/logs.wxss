.title{
  position: relative;
  background: #fff;
  font-size: 36rpx;
  vertical-align: middle;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}
.title_con{
  display:inline-block;
  vertical-align: super;
}
.pic{
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-top: 20rpx;
}
.attention{
  width: 160rpx;
  height: 40rpx;
  border: solid 1px #f44933;
  position: absolute;
  text-align: center;
  border-radius: 10rpx;
  top: 40rpx;
  right: 20rpx;
  color: #f44933;
}
.style{
  margin-bottom: 10rpx;
}
.video_pic{
  width:100%;
  height: 400rpx;
}
.video{
  position:relative;
  text-align: center;
}
.pause{
  position:absolute;
  top:50%;
  margin-top: -40rpx;
  width: 80rpx;
  height: 80rpx;
  left: 50%;
  margin-left: -40rpx;
}
.bot{
margin: 10rpx 0;
text-align: center;
}
.bot view{
  display:inline-block;
  width:25%;
}
.bot view image{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.bot view text{
  margin-left: 10rpx;
  vertical-align: middle;
}
.pic2{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin: 10rpx 10rpx 0 10rpx;
}
.zanList{
  position:relative;
  padding: 0 20rpx;
  height:80rpx;
  background: #fff;
  margin-bottom: 20rpx;
}
.border{
  position:absolute;
  top:50%;
  margin-top: -30rpx;
  right: 40rpx;
  width: 55rpx;
  height:55rpx;
  display: inline-block;
  border: solid 1px #ccc;
  border-radius:50%;
  vertical-align: super;
}
.border image{
  vertical-align: middle;
  width: 40rpx;
  height: 40rpx;
  margin: 8rpx;
}
.com_title{
  position:relative;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  background: #fff;
  text-indent: 60rpx;
}
.red_border{
  display: block;
  position: absolute;
  left: 0;
  top: 50%;
  margin-top:-20rpx;
  width: 20rpx;
  height: 40rpx;
  background: #f44933;
}
.com_list {
  margin-top: 20rpx;
  margin-bottom: 120rpx;
  background: #f2eded;
  min-height: 180rpx;
}
.com_list_title{
  position:relative;
}
.com_list_title image{
 width: 100rpx;
 height: 100rpx;
 border-radius: 50%;
 vertical-align: middle;
 margin-right: 20rpx;
}
.com_list_title text{
   font-size: 30rpx;
}
.time{
  position: absolute;
  right: 10rpx;
  top: 30rpx;
}
.com_list_con text{
  font-size: 30rpx;
}
.bottom {
  position: fixed;
  bottom:0;
  width: 100%;
  height: 100rpx;
  background: #fff;
  padding: 0 20rpx;
}
.bottom input{
  display: inline-block;
  background: #f2eded;
  border-radius: 10rpx;
  width: 80%;
  height: 1.6rem;
  vertical-align:middle; 
  margin-top: 20rpx;
}
.bottom .send{
  display: inline-block;
  width: 100rpx;
  height: 60rpx;
  font-size: 30rpx;
  text-align: center;
  margin-left: 20rpx;
  vertical-align:middle; 
   margin-top: 20rpx;
   line-height: 60rpx;
}